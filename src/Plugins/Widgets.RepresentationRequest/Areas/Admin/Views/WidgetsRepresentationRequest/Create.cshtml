@using Widgets.RepresentationRequest.Models
@model RepresentationRequestModel
@{
    //page title
    ViewBag.Title = Loc["Widgets.RepresentationRequest.AddNew"];
    Layout = "_ConfigurePlugin";
}
<form asp-controller="WidgetsFAQs" asp-action="Create" method="post" id="faqs-form">
    
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-sitemap"></i>
                        @Loc["Widgets.RepresentationRequest.AddNew"]
                        <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(Loc["Widgets.RepresentationRequest.BackToList"], "Configure")</small>
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided util-btn-margin-bottom-5">
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @Loc["Admin.Common.Save"] </button>
                            <button class="btn btn-success" type="submit" name="save-continue"><i class="fa fa-check-circle"></i> @Loc["Admin.Common.SaveContinue"] </button>
                        </div>
                    </div>
                </div>
                <div class="x_content form">
                    <partial name="_CreateOrUpdate.cshtml" model="Model" />
                </div>
            </div>
        </div>
    </div>
</form>