window.addEventListener('load', function(){

    myHomeFAQSection.init();
});

var myHomeFAQSection = {};

myHomeFAQSection.init = function(){
    var titles = document.getElementsByClassName('l-accordion__title');
    for(var i=0;i<titles.length; i++){
        var title = titles[i];
        title.addEventListener("click", myHomeFAQSection.toggleAccordion);
    }
}

myHomeFAQSection.toggleAccordion=function(sender_accordionTitle){

    var accordion = this.parentNode;
    if(accordion.classList.contains('is-open')){

        //myHomeFAQSection.closeAllAccordions();
        accordion.classList.remove('is-open');


    }else{
        //myHomeFAQSection.closeAllAccordions();
        accordion.classList.add('is-open');
        //setTimeout(function () { accordion.scrollIntoView(); }, 100);
    }

}

myHomeFAQSection.closeAllAccordions=function(){
    var accordions = document.getElementsByClassName('l-accordion');
    for(var i=0;i<accordions.length; i++){
        var accordion = accordions[i];
        accordion.classList.remove('is-open');
    }
}



